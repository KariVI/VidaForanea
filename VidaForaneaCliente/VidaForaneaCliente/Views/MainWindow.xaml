            <Button Name="btExit" Style="{DynamicResource RoundCorner}" Content="Salir" HorizontalAlignment="Left" Margin="465,368,0,0" VerticalAlignment="Top" Width="100" Height="34" Background="#7f4ca5" BorderBrush="#7f4ca5" Foreground="#FFF9F2F2" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="15"  Padding="0 0 0 0"  Click="BtExit_Click" />

        </Grid>

