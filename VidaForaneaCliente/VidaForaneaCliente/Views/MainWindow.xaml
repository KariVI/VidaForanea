        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml">

                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="0,0,0,-2">
        <Grid>
            <Image Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Source="/Images/Logo.png" Height="176" Width="234" Margin="0,10,0,0"/>
